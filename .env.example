# =============================================================================
# Accounting System - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values for your environment.
# NEVER commit the .env file to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_ENV=local
APP_DEBUG=true

# -----------------------------------------------------------------------------
# Database Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# These variables are REQUIRED - the application will fail to start without them.

DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=accounting_system

# REQUIRED: Database credentials (no defaults - must be set)
DB_USERNAME=
DB_PASSWORD=

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
# Used for session storage, rate limiting, and caching.

REDIS_HOST=redis
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# JWT Authentication (REQUIRED)
# -----------------------------------------------------------------------------
# REQUIRED: Generate a strong random secret (at least 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=

# Token expiration in seconds (default: 3600 = 1 hour)
JWT_EXPIRATION=3600

# Issuer claim for JWT tokens
JWT_ISSUER=accounting-api

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
# Session duration in hours
SESSION_DURATION_HOURS=24

# BCrypt cost factor (10-14 recommended, higher = more secure but slower)
BCRYPT_COST=12

# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
