# =============================================================================
# Docker Environment Configuration
# =============================================================================
# Copy this file to .env for Docker Compose to use.
# These values are for the Docker containers themselves.
# =============================================================================

# -----------------------------------------------------------------------------
# Database Container Settings
# -----------------------------------------------------------------------------
MYSQL_DATABASE=accounting_system
MYSQL_USER=accounting_user
MYSQL_PASSWORD=your_secure_password_here
MYSQL_ROOT_PASSWORD=your_secure_root_password_here

# -----------------------------------------------------------------------------
# Application Database Connection
# -----------------------------------------------------------------------------
# These should match the MySQL container settings above
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=accounting_system
DB_USERNAME=accounting_user
DB_PASSWORD=your_secure_password_here

# -----------------------------------------------------------------------------
# Redis Settings
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# JWT Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_at_least_32_chars
JWT_EXPIRATION=3600
JWT_ISSUER=accounting-api

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_ENV=local
APP_DEBUG=true

# -----------------------------------------------------------------------------
# Port Mappings (optional - can be customized per environment)
# -----------------------------------------------------------------------------
# APP_PORT=8080
# PHPMYADMIN_PORT=8081
# MYSQL_EXTERNAL_PORT=3306
# REDIS_EXTERNAL_PORT=6379
